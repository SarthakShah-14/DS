#include<stdio.h>
#include<stdlib.h>
struct node{
	int data;
	struct node *next;
}*first=NULL,*last=NULL,*tmp=NULL,*curr=NULL;

int isempty()
{
	return first==NULL;
}
void insertlast()
{
	tmp=(struct node*)malloc(sizeof (struct node));
	printf("enter data:");
	scanf("%d",&tmp->data);

	last->next=NULL;
	if(isempty())
	{
		first=last=tmp;
	}
	else
	{
		last->next=tmp;
		last=tmp;
	}

}
void deletefirst()
	{
	if(isempty())
	{
		printf("\n linked list is empty");
		return;
	}
	else
	{
		tmp=first;
		printf("%d node is deleted",tmp->data);
		if(first==last)
		{
			first=last=NULL;
		}
		else
		{
			first=first->next;
		}
		free(tmp);
	}
}
void traversal()
{
	if(isempty())
	{
	printf("\n linked list is empty");
	return;
	}
	else
	{
	curr=first;
	while(curr!=NULL)
	{
	printf("\t%d",curr->data);
	curr=curr->next;
	}
	}
}
int main()
{
	int choice;
	do{

	printf("\n*** Queue with Linked list menu***");
	printf("\n 1.insert ");
	printf("\n 2.delete");
	printf("\n 3.Traversal");
	printf("4Exit";)

	scanf("%d",&choice);
	switch(choice)
		{
			   case 1:
			insertfirst();
			break;

			case 2:
			insertlast();
			break;

			case 3:
			insertafter();
			break;

			case 4:
			deletefirst();
			break;
		}
			}
			while(choice!=11);
      return 0;
	}
