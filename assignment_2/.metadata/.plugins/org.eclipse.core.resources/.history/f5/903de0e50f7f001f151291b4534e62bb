#include<stdio.h>
#define max 5
int queue[max];
int r = max , f = max ;

void enqueue(){
    if(r == 0){
        printf("queue is full..");
        return;
    }
    printf("Enter Value : ");
    scanf("%d",&queue[r]);
    r--;
    return;
}
void dequeue(){
    if(r == max && f == max )
    {
        printf("Queue is empty...\n");
        return;
    }
    else if( r == f)
    {
        f = max;
        r = max;
        return;
    }
    else
    {
        f--;
        printf("Dequeue successfully....\n\n");
    }
    return;
}
void traversal()
{
    if(r == max && f == max )
    {
        printf("Queue is empty...\n");
        return;
    }
    for(int i = r+1 ; i <= f; i++ )
    {
        printf("%d\t",queue[i]);
    }
}


int main(){
    int choice;
    do{
        printf("\n\nPress 1: enqueue\nPress 2: dequeue\nPress 3 : traversal\nPress 0 : Exit\n");
        scanf("%d",&choice);
        switch(choice){
        case 1:
            enqueue();
            break;
        case 2:
            dequeue();
            break;
        case 3:
            traversal();
            break;
        case 0:
            return -1;
        default:
            printf("Enter Valid Input\n");
            break;
        }


    }while(1);
    return 0;
}


